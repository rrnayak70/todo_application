<%-include("partials/header")%>
<%-include("partials/nav")%>
<div class=" mt-2 p-5 dflex-c align-center w-50 h-75 mt-3 container">
    <h1 class="text-danger mb-3">User Profile Page</h1>
    <div class="d-flex">


        <img width="100" height="100" style="object-fit: cover;" class="rounded-circle me-5" src="/images/<%=user.avatar%>" alt="">
        
        <form  action="/avatar" method="post" enctype="multipart/form-data">
        
        <input  class="form-control mt-3 mb-3"  type="file" name="avatar">
        <button class="btn btn-danger">Upload Photo</button>
        
        
        </form>
        
        
        <hr>
    </div>
    <div class="m-auto mt-5 w-50 ">

        <form action="/profile" method="post">
            
            <input class="form-control mb-3" type="text" placeholder="johndoe" name="username" value="<%=user.username%>">
            <input class="form-control mb-3" type="text" placeholder="abc@gmail.com" name="email" value="<%=user.email%>">
            <button class="btn btn-primary w-50 mt-2">Update Profile</button>
        </form>
        <hr>
    </div>
<div class="w-50">
    <a class="text-decoration-none btn btn-success text-light" href="/reset/<%= user._id%>">Reset password</a>
</div>
</div>


<%-include("partials/footer")%>